<div class="book-details-container">
    <div class="book-header">
        <h1>üìö <%= book.Title %>
        </h1>
        <p class="book-id">Book ID: <%= book.ID %>
        </p>
    </div>

    <div class="book-info-section">
        <h2>üìñ Book Information</h2>
        <div class="info-grid">
            <div class="info-item">
                <label>Author:</label>
                <span>
                    <%= book.Author %>
                </span>
            </div>
            <div class="info-item">
                <label>Title:</label>
                <span>
                    <%= book.Title %>
                </span>
            </div>
            <% if (book.ISBN) { %>
                <div class="info-item">
                    <label>ISBN:</label>
                    <span>
                        <%= book.ISBN %>
                    </span>
                </div>
                <% } %>
                    <% if (book.Genre) { %>
                        <div class="info-item">
                            <label>Genre:</label>
                            <span class="genre-tag">
                                <%= book.Genre %>
                            </span>
                        </div>
                        <% } %>
                            <% if (book.PublicationYear) { %>
                                <div class="info-item">
                                    <label>Publication Year:</label>
                                    <span>
                                        <%= book.PublicationYear %>
                                    </span>
                                </div>
                                <% } %>
        </div>

        <% if (book.Description) { %>
            <div class="description-section">
                <label>Description:</label>
                <p class="description-text">
                    <%= book.Description %>
                </p>
            </div>
            <% } %>
    </div>

    <div class="copies-section">
        <h2>üìã Copies Available</h2>
        <div class="copies-summary">
            <div class="summary-item available">
                <span class="count">
                    <%= availableCopies %>
                </span>
                <span class="label">Available</span>
            </div>
            <div class="summary-item borrowed">
                <span class="count">
                    <%= borrowedCopies %>
                </span>
                <span class="label">Borrowed</span>
            </div>
            <div class="summary-item total">
                <span class="count">
                    <%= totalCopies %>
                </span>
                <span class="label">Total</span>
            </div>
        </div>

        <% if (copies && copies.length> 0) { %>
            <div class="copies-table-container">
                <table class="copies-table">
                    <thead>
                        <tr>
                            <th>Copy ID</th>
                            <th>Status</th>
                            <th>Added Date</th>
                            <th>Last Updated</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% copies.forEach(function(copy) { %>
                            <tr class="copy-row <%= copy.Status.toLowerCase() %>">
                                <td class="copy-id">
                                    <%= copy.CopyID %>
                                </td>
                                <td>
                                    <span class="status-badge <%= copy.Status.toLowerCase() %>">
                                        <%= copy.Status==='Available' ? '‚úÖ Available' : 'üìö Borrowed' %>
                                    </span>
                                </td>
                                <td>
                                    <%= new Date(copy.CreatedAt).toLocaleDateString() %>
                                </td>
                                <td>
                                    <%= new Date(copy.UpdatedAt).toLocaleDateString() %>
                                </td>
                            </tr>
                            <% }); %>
                    </tbody>
                </table>
            </div>
            <% } else { %>
                <div class="no-copies">
                    <p>üì≠ No copies available for this book.</p>
                </div>
                <% } %>
    </div>

    <!-- Current Borrowers Section -->
    <% if (borrowingDetails && borrowingDetails.length> 0) { %>
        <div class="borrowing-section">
            <h2>üë• Current Borrowers</h2>
            <div class="borrowers-grid">
                <% borrowingDetails.forEach(function(borrowing) { %>
                    <div class="borrower-card">
                        <div class="borrower-header">
                            <h3>
                                <%= borrowing.MemberName %>
                            </h3>
                            <span class="copy-id">Copy: <%= borrowing.CopyID %></span>
                        </div>
                        <div class="borrower-details">
                            <div class="detail-item">
                                <span class="label">üìß Email:</span>
                                <span class="value">
                                    <%= borrowing.MemberEmail %>
                                </span>
                            </div>
                            <div class="detail-item">
                                <span class="label">üìÖ Borrowed:</span>
                                <span class="value">
                                    <%= new Date(borrowing.BorrowDate).toLocaleDateString() %>
                                </span>
                            </div>
                            <div class="detail-item">
                                <span class="label">‚è∞ Due:</span>
                                <span class="value due-date">
                                    <%= new Date(borrowing.DueDate).toLocaleDateString() %>
                                </span>
                            </div>
                        </div>
                    </div>
                    <% }); %>
            </div>
        </div>
        <% } else { %>
            <div class="no-borrowers-section">
                <h2>üë• Current Borrowers</h2>
                <div class="no-borrowers">
                    <p>üìñ No current borrowers for this book.</p>
                </div>
            </div>
            <% } %>

                <div class="actions-section">
                    <a href="/edit/<%= book.ID %>" class="action-btn edit">‚úèÔ∏è Edit Book</a>
                    <a href="#" class="action-btn add" onclick="addNewCopy('<%= book.ID %>')">üìã Add New Copy</a>
                </div>
</div>


<script>
    async function addNewCopy(bookId) {
        try {
            const response = await fetch(`/api/books/${bookId}/copies`, {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                }
            });

            if (response.ok) {
                const result = await response.json();
                alert(`‚úÖ Copy created successfully!\nCopy ID: ${result.data.copyId}`);
                // Reload the page to show the new copy
                window.location.reload();
            } else {
                const error = await response.json();
                alert(`‚ùå Failed to create copy: ${error.message || 'Unknown error'}`);
            }
        } catch (error) {
            console.error('Error creating copy:', error);
            alert('‚ùå Failed to create copy. Please check your network connection and try again.');
        }
    }
</script>